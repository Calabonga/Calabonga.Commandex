<UserControl x:Class="Calabonga.Commandex.UI.Core.Dialogs.NotificationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="300" MinHeight="100"
             MaxHeight="500"
             MaxWidth="800"
             Margin="4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <TextBox TextWrapping="Wrap" BorderThickness="0"
                     VerticalScrollBarVisibility="Hidden"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     IsReadOnly="true"
                     Text="{Binding Title}"/>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
            <Button Content="Ok" Click="OnButtonOkClicked" Padding="4" MinWidth="150"/>
        </StackPanel>
    </Grid>
</UserControl>
